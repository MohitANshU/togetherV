<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adcoretechnologies.togetherv.auth.Login.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/tv_banner" />

    <LinearLayout
        style="@style/AppTheme.LinearLayout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etUserName"
                style="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/sv_email"
                android:gravity="center_vertical"
                android:hint="Username"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPassword"
                style="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/sv_password"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnLogin"
            style="@style/AppTheme.Button"
            android:text="Login" />

        <TextView
            android:id="@+id/tvRegister"
            style="@style/AppTheme.TextView"
            android:layout_margin="@dimen/space_x2"
            android:background="@drawable/bg_black_button"
            android:gravity="center"
            android:padding="@dimen/space_x2"
            android:text="Click here for new registration" />

        <TextView
            android:id="@+id/tvReset"
            style="@style/AppTheme.TextView"
            android:gravity="center"
            android:text="Reset your password here"
            android:textColor="@color/colorSecondaryText" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvVersion"
        style="@style/AppTheme.TextView"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Developed by Adcore Technologies v1.0"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>
